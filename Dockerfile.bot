# syntax=docker/dockerfile:1
FROM node:20-slim

# Install utilities required for ffmpeg static packages
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

ENV NODE_ENV=production
ENV PORT=8080

CMD ["npm", "run", "bot"]
